<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".view.result.ResultActivity">

    <HorizontalScrollView
        android:id="@+id/r8ogs9hb61gq"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/cr40bfffffbf9"
        android:paddingTop="10dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/rcdja9fk6f"
                android:layout_width="412dp"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_result"
                    android:layout_width="match_parent"
                    android:layout_height="365dp"
                    android:layout_marginHorizontal="12dp"
                    android:src="@drawable/baseline_photo_24"
                    android:scaleType="fitCenter"
                    />
                <LinearLayout
                    android:id="@+id/rqr6zodgiea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cr40bfffffbf9"
                    android:paddingTop="64dp"
                    android:paddingBottom="48dp"
                    android:paddingEnd="35dp"
                    android:layout_marginTop="-71dp"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_result"
                        android:textColor="#000000"
                        android:textSize="24sp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="36dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/result"
                        />

                    <TextView
                        android:id="@+id/rjt5pmp2qui"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginStart="34dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="@string/description"
                        />
                    <TextView
                        android:id="@+id/tv_desc"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:layout_marginBottom="64dp"
                        android:layout_marginStart="35dp"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="@string/desc"
                        />

                        <LinearLayout
                            android:id="@+id/rzx8guzmyph"
                            android:layout_width="282dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/cr9bffffdfce"
                            android:paddingVertical="20dp"
                            android:layout_marginStart="66dp"
                            android:paddingHorizontal="105dp"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/rjac0ty2dgst"
                                android:textColor="#B65629"
                                android:textSize="14sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="@string/try_again"
                                />
                        </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>